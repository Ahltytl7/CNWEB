@model CNWEB.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<OrderDetail> orderDetails = ViewBag.chitiet;
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a><a asp-area="Admin" asp-controller="AdminOrders" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Danh sách đơn hàng</a>
            <span class="breadcrumb-item active">Chi tiết đơn hàng</span>
        </nav>
    </div>
</div>
<div class="card">
<div class="card-body">
    <div id="invoice" class="p-h-30">
        <div class="row m-t-20 lh-2">
            <div class="col-sm-9">
                <h3 class="p-l-10 m-t-10">Thông tin đơn hàng:</h3>
                <address class="p-l-10 m-t-10">
                    <span class="font-weight-semibold text-dark">Họ và tên: @Model.User.Name</span><br>
                    <span>Địa chỉ: @Model.Address</span><br>
                        <span>Số điện thoại: @Model.Phone</span><br>
                        <span>Email: @Model.User.Email</span>
                </address>
            </div>
            <div class="col-sm-3">
                <div class="m-t-80" style="margin-top: 50px">
                    <div class="text-dark text-uppercase d-inline-block">
                        <span class="font-weight-semibold text-dark">Mã đơn hàng :</span>
                    </div>
                    <div class="float-right">@Model.Id</div>
                </div>
                <div class="text-dark text-uppercase d-inline-block">
                    <span class="font-weight-semibold text-dark">Thời gian đặt hàng :</span>
                </div>
                <div class="float-right">@Model.OrderDate</div>
                    <div class="text-dark text-uppercase d-inline-block">
                        <span class="font-weight-semibold text-dark">Trạng thái đơn hàng :</span>
                    </div>
                    <div class="float-right">@Model.TransactStatus.Status</div>
            </div>
        </div>
            <div> <h3 class="p-l-10 m-t-10">Danh sách sản phẩm:</h3><br /></div>
        <div class="m-t-20">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Sản Phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(orderDetails != null && orderDetails.Count()>0)
                        {
                            foreach(var item in orderDetails)
                            {
                                int i = 1;
                                <tr>
                                    <th>@i</th>
                                    <td><a>@item.Product.Name</a></td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price VND</td>
                                    <td>@item.Total VND</td>
                                </tr>
                                i++;
                            }
                        }
                     
                     
                    </tbody>
                </table>
            </div>
            <div class="row m-t-30 lh-1-8">
                <div class="col-sm-12">
                    <div class="float-right text-right">
                   
                        <hr>
                        <h3><span class="font-weight-semibold text-dark">Tổng tiền :</span> @Model.Amount VNĐ</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
